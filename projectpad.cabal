cabal-version:       >=1.10

executable projectpad
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8,
                       -- need 2.1.1.2 due to https://github.com/yesodweb/persistent/issues/328
                       persistent-sqlcipher >= 2.1.1.2,
                       persistent,
                       persistent-template,
                       esqueleto,
                       transformers,
                       hsqml,
                       time,
                       errors,
                       mtl,
                       file-embed,
                       bytestring,
                       text,
                       containers,
                       template-haskell,
                       fast-logger,
                       directory,
                       process
  hs-source-dirs:      src
  ghc-options:         -Wall -threaded -fno-warn-unused-do-bind
  default-language:    Haskell2010
